<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h5> <%= t('common.errors') %></h5>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <%= form_for [:admin, @post], html: { multipart: true} do |f| %>
    <div class="form-group">
      <%= form.label  :title %>
      <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :summary %>
      <%= form.text_area :summary, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class:'form-control' %>
    </div>

      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true}, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :all_tags %>
        <%= form.text_field :all_tags, class:'form-control' %>
      </div>

    <div class="form-group">
      <%= form.file_field :image %>
    </div>

    <div class="actions">
      <%= form.submit 'Сохранить', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
<% end %>